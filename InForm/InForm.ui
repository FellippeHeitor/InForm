    IF Control(id).BoundTo > 0 THEN
        Control(Control(id).BoundTo).Redraw = True
        Control(Control(id).BoundTo).BoundTo = 0
        Control(id).BoundTo = 0
        Control(id).Redraw = True
    END IF
END SUB

